{
    "_comment": "Fichier de configuration exemple pour le système de transfert de photos",
    "_description": "Copiez ce fichier vers config.json et adaptez selon vos besoins",
    
    "ftp": {
        "_comment": "Configuration du serveur FTP de destination",
        "server": "ftp.example.com",
        "port": 21,
        "username": "your_ftp_username",
        "password": "your_ftp_password",
        "directory": "/uploads/photos",
        "passive_mode": true,
        "_alternatives": {
            "_comment": "Exemples d'autres configurations FTP",
            "server_sftp": "sftp.example.com",
            "port_sftp": 22,
            "server_ftps": "ftps.example.com",
            "port_ftps": 990
        }
    },
    
    "camera": {
        "_comment": "Configuration de l'appareil photo",
        "auto_detect": true,
        "download_path": "/tmp/photos",
        "delete_after_upload": true,
        "_options": {
            "_comment": "Options avancées pour l'appareil photo",
            "capture_target": "card",
            "image_format": "jpeg",
            "quality": "fine"
        }
    },
    
    "system": {
        "_comment": "Configuration système générale",
        "log_level": "INFO",
        "check_interval": 5,
        "max_retries": 3,
        "web_port": 8080,
        "web_host": "0.0.0.0",
        "_log_levels": {
            "_comment": "Niveaux de log disponibles",
            "DEBUG": "Toutes les informations (très détaillé)",
            "INFO": "Informations générales (recommandé)",
            "WARNING": "Avertissements et erreurs",
            "ERROR": "Erreurs uniquement"
        },
        "_performance": {
            "_comment": "Paramètres de performance",
            "check_interval_low_power": 30,
            "check_interval_normal": 5,
            "check_interval_high_freq": 2
        }
    },
    
    "_examples": {
        "_comment": "Exemples de configurations pour différents cas d'usage",
        
        "studio_photo": {
            "description": "Configuration pour studio photo avec appareil connecté en permanence",
            "camera": {
                "auto_detect": true,
                "download_path": "/home/pi/studio_photos",
                "delete_after_upload": false
            },
            "system": {
                "check_interval": 2,
                "log_level": "DEBUG"
            }
        },
        
        "event_photography": {
            "description": "Configuration pour événements avec transfert rapide",
            "camera": {
                "auto_detect": true,
                "download_path": "/tmp/event_photos",
                "delete_after_upload": true
            },
            "system": {
                "check_interval": 1,
                "max_retries": 5,
                "log_level": "INFO"
            },
            "ftp": {
                "directory": "/uploads/events/2025"
            }
        },
        
        "low_power": {
            "description": "Configuration économe en énergie pour fonctionnement sur batterie",
            "system": {
                "check_interval": 30,
                "log_level": "WARNING",
                "web_host": "127.0.0.1"
            }
        }
    },
    
    "_security": {
        "_comment": "Notes de sécurité importantes",
        "_recommendations": [
            "Utilisez des mots de passe forts pour FTP",
            "Préférez FTPS/SFTP au FTP simple",
            "Limitez l'accès réseau à l'interface web",
            "Surveillez les logs régulièrement",
            "Changez les mots de passe par défaut du Raspberry Pi"
        ]
    },
    
    "_troubleshooting": {
        "_comment": "Aide au dépannage",
        "_common_issues": {
            "camera_not_detected": "Vérifiez la connexion USB, les permissions et gphoto2",
            "ftp_connection_failed": "Vérifiez serveur, port, identifiants et mode passif",
            "high_cpu_usage": "Augmentez check_interval ou réduisez log_level",
            "disk_space_full": "Activez delete_after_upload ou nettoyez download_path"
        }
    }
}
